<?xml version='1.0' encoding='utf-8'?>
<widget
    id="com.evothings.bluno-demo"
    version="0.0.1"   
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:gap="http://phonegap.com/ns/1.0">

    <name>Cordova bluetoothle</name>
    <description> Communication bluetooth bidirectionnelle </description>
    <author email="websmurf@evothings.com" href="http://evothings.com"> Webb S Murph </author>
    <content src="index.html" />

    <gap:plugin name="cordova-plugin-bluetoothle" source="npm" />
    <gap:plugin name="Bluetooth Serial Plugin for PhoneGap" source="npm" />
    <gap:plugin name="cordova-plugin-bluetooth-status" source="npm" />

    <access origin="*" /> <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <platform name="android">
    <allow-intent href="market:*" />
    </platform>

    <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
    </platform>
</widget>